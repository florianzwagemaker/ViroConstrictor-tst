Bootstrap: docker
From: mambaorg/micromamba:latest

%files
    ./ViroConstrictor/workflow/envs/ORF_analysis.yaml /install.yml

%help
    Singularity container for testing purposes

%post
    micromamba install -q -y -n base git -c conda-forge
    micromamba install -q -y -n base -f /install.yml && \
    micromamba clean -q --all --yes

%environment
    export PATH=/opt/conda/bin:$PATH

%runscript
    exec "@"
